@{
    ViewBag.Title = "Publish";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<link href="~/Content/css/publish.css" rel="stylesheet" />
<div class="adjust">
    <form action="~/Details/Recruit/AddRecruit" method="post">
        @Html.GuaGuo_InptTextWithTitle("Title", "标题：", "", "圣上题字")
        @Html.GuaGuo_InptTextWithTitle("Words", "兼职内容：", "", "简短的字描述，比如：发传单，销售")

        <div class="form-group">
            <label>结算方式：</label>
            <select class="form-control" id="PayType" name="PayType">
                <option value="0">日结</option>
                <option value="1">周结</option>
                <option value="2">月结</option>
                <option value="3">其他</option>
            </select>

        </div>
        <div class="form-group">
            <label>性别允许：</label>
            <select class="form-control" id="Sex" name="Sex">
                <option value="0">女生</option>
                <option value="1">男生</option>
                <option value="1">其他</option>

            </select>

        </div>

        @Html.GuaGuo_InptTextWithTitle("WorkDate", "工作开始日期：", "", "点击选择开始日期", attributes: new { @readonly = "readonly" })     
        @Html.GuaGuo_InptTextWithTitle("WorkEndDate", "工作结束日期：", "", "点击选择结束日期", attributes: new { @readonly = "readonly" })
        @Html.GuaGuo_InptTextWithTitle("WorkTime", "工作时间：", "", "列如：朝九晚六")
        @Html.GuaGuo_InptTextWithTitle("Money", "工作薪资：", "", "￥_￥")
        @Html.GuaGuo_InptTextWithTitle("Location", "工作地点：", "", "南亚~爱情海~等等等")
        @Html.GuaGuo_InptTextWithTitle("MaxNum", "所需人数：", "", "10人")
        @Html.GuaGuo_InptTextWithTitle("Note", "工作详情：", "", "具体做什么")

        @Html.GuaGuo_InptTextWithTitle("Man", "联系人：", "", "X先生/X女士")
        @Html.GuaGuo_PhoneNumberCheck()

        <div class="form-group">
            <label>具体要求：</label>
            <textarea id="Requirement" name="Requirement" class="form-control"></textarea>
        </div>
        <input id="submit" type="button" class="btn btn-primary  remark" value="发布">
        <div>
            <a href="~/Homes/Home/Index"><img src="~/Content/image/home.png" class="Float-Png" /></a>
        </div>
    </form>
    <script src="~/Content/js/publish.js"></script>
    
</div>