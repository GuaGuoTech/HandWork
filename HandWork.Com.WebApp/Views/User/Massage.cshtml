                <td class="col-xs-5"></td>
                <td class="col-xs-1"><span class="glyphicon glyphicon-chevron-down Fontcolor" aria-hidden="true"></span></td>
            </tr>



        </table>


    </div>
    <div class="showContent">
        <table class="table table-hover">
            @{
                if (Model.relationAnWeixinUser != null)
                {
                    foreach (var item in Model.relationAnWeixinUser)
                    {
                        <tr class="askIdPanel" key="@item.recuit.Id">
                            <td class="col-xs-5"><a class="recuitTitle">@item.recuit.Title</a></td>
                            <td class="col-xs-5">
                                <a class="userName UserName ">
                                    @if (@item.relation.Finish == 1)
                                    {
                                        @:申请通过
                                }
                                    else
                                    {
                                        @:申请被拒绝
                                }
                                </a>
                            </td>
                            <td class="col-xs-1"></td>
                        </tr>
                    }
                }

            }
        </table>
    </div>
