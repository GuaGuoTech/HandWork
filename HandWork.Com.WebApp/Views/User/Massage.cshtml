            </tr>
        </table>
    </div>
    <div class="showContent" id="dsfasdfasdfsdafasdf">
        <table id="allRequst" class="table table-hover">
            @{
                if (Model.recruitAndRelationAndWeixinUser!=null)
                {
                     foreach (var item in Model.recruitAndRelationAndWeixinUser)
                {
                    <tr>
                        <td class="col-xs-1"><input class="checkThisAction" value="@item.relation.Id" type="checkbox" /></td>
                        <td class="col-xs-5"><a class="recuitTitle">@item.recuit.Title</a></td>
                        <td class="col-xs-5"><a class="userName UserName ">申请人：@item.weixinUser.nickname</a></td>
                        <td class="col-xs-1"></td>
                    </tr>
                }
                                }
               
            }
        </table>
        <div class="tableHead">
            <button type="button" id="checkAll" class="btn btn-default btn-sm buttonradio">全选</button>
            <button type="button" id="acceptCheck" class="postIds btn btn-default btn-sm buttonradio">接受</button>
            <button type="button" id="refuseCheck" class="postIds btn btn-default btn-sm buttonradio">拒绝</button>
        </div>

    </div>




    <div class="showHead">

        <table class="table table-hover BorderBottom">

            <tr>
