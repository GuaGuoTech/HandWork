@using HandWork.Com.Model.Weixins
@using Newtonsoft.Json
<body>
    @*导航条*@
    <nav class="navbar  nabarcolor">
        @{
            if (Session["WeixinUser"] != null)
            {
                WeixinUser user = JsonConvert.DeserializeObject<WeixinUser>(Session["WeixinUser"].ToString());
                <span><img src="@user.headimgurl" /></span>

                <div class="btn-group floatRight navRight">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="floatRight userInfoBlock"><span>@user.nickname</span><span class="caret"></span></span>
                    </a>
                    @*<a class="btn btn-primary" href="#"><i class="icon-user icon-white"></i>用户 </a>
                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>*@
                    <ul class="dropdown-menu">
                        <li><a href="~/Users/user/MyZoren/@user.openid"><i class="icon-pencil"></i> 个人中心</a></li>
                        <li class="divider"></li>
                        <li><a href="#"><i class="icon-trash"></i> 消息</a></li>
                    </ul>
                </div>

            }
            else
            {
                <span><img src="~/Content/image/logo.jpg" /></span>

                <div class="btn-group floatRight navRight">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="floatRight userInfoBlock"><span>请登录</span><span class="caret"></span></span>
                    </a>
                    @*<a class="btn btn-primary" href="#"><i class="icon-user icon-white"></i>用户 </a>
                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>*@
                    <ul class="dropdown-menu">
                        <li><a href="#"><i class="icon-pencil"></i> 个人中心</a></li>
                        <li class="divider"></li>
                        <li><a href="#"><i class="icon-trash"></i> 消息</a></li>
                    </ul>
                </div>
            }
        }


    </nav>


    @RenderBody()
    <script src="~/Content/js/personal.js"></script>

</body>

</html>
